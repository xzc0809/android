<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="车牌："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="24sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/rental_car_id"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:text="车型："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1.13"
            android:textSize="24sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/rental_car_xin"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:text="起始日期："
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/text1" />

        <TextView
            android:id="@+id/dateDisplay"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="我是默认时间显示" />

        <Button
            android:id="@+id/dateChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:text="起始时间："
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/text2" />

        <TextView
            android:id="@+id/dateDisplay2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="我是默认时间显示" />

        <Button
            android:id="@+id/dateChoose2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:text="结束日期："
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/text3" />

        <TextView
            android:id="@+id/dateDisplay3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="我是默认时间显示" />

        <Button
            android:id="@+id/dateChoose3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:text="结束时间："
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/text" />

        <TextView
            android:id="@+id/dateDisplay4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="我是默认时间显示" />

        <Button
            android:id="@+id/dateChoose4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="确认提交"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_choose" />

</LinearLayout>

